
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<style>
    .box {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
        
</style>
<div  >
    <h3 class="form-title">Đăng nhập</h3>
    <div class="form-group">      
        <label class="control-label visible-ie8 visible-ie9">Username</label>
        <input class="form-control form-control-solid placeholder-no-fix" type="text" placeholder="Tên tài khoản" data-bind="value: UserName" name=" UserName" />
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Password</label>
        <input class="form-control form-control-solid placeholder-no-fix" type="password"  placeholder="Mật khẩu" data-bind="value: PassWord" name="  PassWord"/>
    </div>
    <div class="form-group box" >
        <div ><button data-bind="click: $root.submit" class="btn btn-success uppercase">Đăng nhập</button> </div>
    </div>
     
</div>

@section scripts {
    <script src="~/ApiJs/login.js"></script>
}

